@model Dictionary<DayOfWeek, List<LessonsViewModel>>

@{
    ViewData["Title"] = "Timetable";
}

@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <th>
                Понедельник
            </th>
            <th>
                Вторник
            </th>
            <th>
                Среда
            </th>
            <th>
                Четверг
