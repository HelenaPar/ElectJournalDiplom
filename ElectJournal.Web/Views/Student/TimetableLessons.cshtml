            <th>
                Пятница
            </th>
            <th>
                Суббота
            </th>
        </tr>

        <tr>
            <td>
                @if (Model.ContainsKey(DayOfWeek.Monday))
                {
                    foreach (var lessons in Model[DayOfWeek.Monday])
                    {
                        <span>
                            @lessons.SubjectName @lessons.StartTime
                            (Тема: @{if (lessons.Theme != null)
                                { <span>@lessons.Theme</span>;
                            }
                            else
                            {<span>-</span> } },
                            ДЗ: @{if (lessons.Homework != null)
                                { <span>@lessons.Homework</span>;
                            }
                            else
                            {<span>-</span> } })
                        </span>
                        <br /><hr /><br />
