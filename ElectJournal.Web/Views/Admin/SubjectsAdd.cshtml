@model SubjectViewModel

@{
    ViewData["Title"] = "Add subject";
}

<form class="block" asp-antiforgery="true" method="post" asp-action="SubjectsAdd">
    <h2><b>Добавление нового предмета</b></h2>
    <hr id="mine" /><br />

    <input type="hidden" asp-for="Id" />

    <div class="form-floating mb-3">
        <input asp-for="Name" class="form-control" id="floatingInput" placeholder="Название предмета"><br />
        <span asp-validation-for="Name"></span>
    </div>

    <button type="submit" class="btn btn-primary">Добавить</button>
</form>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/user/group-select.js" asp-append-version="true"></script>
    <link rel="stylesheet" type="text/css" href="~/css/reg.css" />
}