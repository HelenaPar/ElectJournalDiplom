@model IEnumerable<ElectJournal.Web.Models.AdminDelUserViewModel>

@{
    ViewData["Title"] = "Users";
}

@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.RoleId)
            </th>
            <th>

            </th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(model => item.Id)
            <input type="hidden" asp-for="@item.Id." value="@item.Id" name="@item.Id" />
        </td>
        <td>
            @Html.DisplayFor(model => item.Login)
        </td>
        <td>
            @Html.DisplayFor(model => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(model => item.Name)
        </td>
        <td>
            @Html.DisplayFor(model => item.MiddleName)
        </td>
        @if (item.RoleId == 1)
        {
            <td>
                Администратор
            </td>
        }
        else if (item.RoleId == 2)
        {
            <td>
                Учитель
            </td>
            <td>
                <button type="submit" asp-route-id="@item.Id" action="Users">Удалить</button>
            </td>
        }
        else if (item.RoleId == 3)
        {
            <td>
                Студент
            </td>
            <td>
                <button type="submit" asp-route-id="@item.Id" action="Users">Удалить</button>
            </td>
        }
    </tr>
        }
    </table>
}

    <style>
        .table td, .table th {
            background-color: aliceblue;
            border-top: 1px solid #000;
        }

        a.table {
            color: darkblue;
        }
    </style>
