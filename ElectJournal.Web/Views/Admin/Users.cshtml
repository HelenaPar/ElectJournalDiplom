@model IEnumerable<ElectJournal.Web.Models.AdminDelUserViewModel>

@{
    ViewData["Title"] = "Users";
}

@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.RoleId)
            </th>
            <th>

            </th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(model => item.Id)
            <input type="hidden" asp-for="@item.Id." value="@item.Id" name="@item.Id" />
        </td>
        <td>
            @Html.DisplayFor(model => item.Login)
        </td>
        <td>
            @Html.DisplayFor(model => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(model => item.Name)
        </td>
        <td>
            @Html.DisplayFor(model => item.MiddleName)
        </td>
        @if (item.RoleId == 1)
        {
            <td>
                Администратор
            </td>
            <td>
            </td>
        }
        else if (item.RoleId == 2)
        {
            <td>
                Учитель
            </td>
            <td>
                <button type="submit" asp-route-id="@item.Id" action="Users">Удалить</button>
            </td>
        }
        else if (item.RoleId == 3)
        {
            <td>
                Студент
            </td>
            <td>
                <button type="submit" asp-route-id="@item.Id" action="Users">Удалить</button>
            </td>
        }
    </tr>
        }
    </table>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Date2.js" asp-append-version="true"></script>
    <link rel="stylesheet" type="text/css" href="~/css/reg.css" />
    <link rel="stylesheet" type="text/css" href="~/css/table.css" />
}
